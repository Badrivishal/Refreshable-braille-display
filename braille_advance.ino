void loop()
{
  for(int i = 0; i < sizeof(data); i++)
  {
    input=data[i];
    for (int j=0 ; j<sizeof(ascii); j++)
    {
      if(input == ascii[j])
      { 
        output=binary[j];
        if( input <=65 || input<91 )
        {
          //capital letters
          digitalWrite(6, HIGH);
          delay(1000);
          digitalWrite(6, LOW);
        }
        else if(input<= 48 || input<57)
        {
          //digits
          digitalWrite(2, HIGH);
          digitalWrite(4, HIGH);
          digitalWrite(5, HIGH);
          digitalWrite(6, HIGH);
          delay(1000);
        }
        for(int k=0;k<6 ;k++)
        {
          if(output[k] == 1)
           {
            digitalWrite(k+2, HIGH);
           }
           else
           {
            digitalWrite(k+2, LOW);
           }
        }
