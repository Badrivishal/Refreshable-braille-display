        for(int k=0;k<6 ;k++)
        {
          if(output[k] == 1)
           {
            digitalWrite(k+2, HIGH);
           }
           else
           {
            digitalWrite(k+2, LOW);
           }
        }
       delay(2000);
       break;
      }
    }
  }
}
              
       
